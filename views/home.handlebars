<main>
        <section class="tarefas">
                {{#each tarefas}}
            <div class="tarefa">
                <form action="">
                       {{#if this.completa}}
                        <div class="completa">
                            <input type="checkbox" name="" id="tarefa-{{this.id}}" checked onchange="descompletarTarefa({{this.id}})" >
                            <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                        </div>   
                    {{else}}
                        <div>
                            <input type="checkbox" name="" id="tarefa-{{this.id}}" onchange="completarTarefa({{this.id}})">
                            <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                        </div>
                    {{/if}}
                    <button>
                        <img src="/imagens/x_icon.png" alt="icone com formato da letra X">
                    </button>
                    
                    
                </form>
            </div>
                {{/each}}   
                
            <div class="informacoes">
                <p>{{quantidadeTarefasAtivas}} tarefas ativas</p>

                <div class="botoes">
                    
                    <a href="/" class="active">Todas</a>
                    <a href="/ativas">Ativas</a>
                    <a href="/completas">Completas</a>
                </div>
                <a href="">Limpar tarefas</a>
            </div>
        </section>

        <section class="botoes">

            <a href="/" class="active">Todas</a>
            <a href="/ativas">Ativas</a>
            <a href="/completas">Completas</a>

        </section>
</main>